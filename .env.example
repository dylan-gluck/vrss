# VRSS Social Platform - Environment Configuration
# Copy this file to .env and customize for your environment

# ==============================================================================
# GENERAL CONFIGURATION
# ==============================================================================
NODE_ENV=development
# Options: development, production, test

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DB_HOST=db
DB_PORT=5432
DB_NAME=vrss
DB_USER=vrss_user
DB_PASSWORD=vrss_dev_password
# IMPORTANT: Change password in production!

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database performance tuning
DB_SHARED_BUFFERS=256MB
DB_CACHE_SIZE=1GB

# ==============================================================================
# BACKEND API CONFIGURATION
# ==============================================================================
BACKEND_PORT=3000

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production
# IMPORTANT: Generate a secure random string for production!
# Example: openssl rand -hex 64
JWT_EXPIRES_IN=7d

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================
FRONTEND_PORT=5173

# API URLs
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# PWA Configuration
VITE_APP_NAME=VRSS
VITE_APP_SHORT_NAME=VRSS
VITE_APP_DESCRIPTION=A customizable social media platform

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# ==============================================================================
# STORAGE CONFIGURATION
# ==============================================================================
STORAGE_TYPE=local
# Options: local, s3

# Local storage
STORAGE_LOCAL_PATH=/app/storage/media

# Storage limits (in MB)
STORAGE_MAX_SIZE_MB=50
VITE_FREE_STORAGE_MB=50
VITE_PAID_STORAGE_MB=1024

# S3 Configuration (for production)
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1
S3_PUBLIC_URL=

# ==============================================================================
# CORS AND SECURITY
# ==============================================================================
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=debug
# Options: error, warn, info, debug, trace
LOG_FORMAT=pretty
# Options: json, pretty

# ==============================================================================
# NGINX CONFIGURATION (for production profile)
# ==============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==============================================================================
# BUN AND NODE VERSIONS
# ==============================================================================
BUN_VERSION=1.1
NODE_VERSION=20

# ==============================================================================
# EMAIL CONFIGURATION (optional, for production)
# ==============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@vrss.app
# SMTP_PASSWORD=
# SMTP_FROM=VRSS <noreply@vrss.app>

# ==============================================================================
# ANALYTICS (optional)
# ==============================================================================
# ANALYTICS_ENABLED=false
# ANALYTICS_API_KEY=

# ==============================================================================
# THIRD-PARTY SERVICES (optional)
# ==============================================================================
# SENTRY_DSN=
# REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=

# ==============================================================================
# DEVELOPMENT TOOLS
# ==============================================================================
# Enable hot reload
WATCH_FILES=true

# Debug settings
DEBUG=false
VERBOSE_LOGS=false

# ==============================================================================
# PRODUCTION OVERRIDES
# ==============================================================================
# For production, override these in .env.production:
# - NODE_ENV=production
# - JWT_SECRET=<secure-random-string>
# - DB_PASSWORD=<secure-password>
# - STORAGE_TYPE=s3
# - LOG_LEVEL=info
# - VITE_ENABLE_DEBUG=false
